<!DOCTYPE html>
<html>
    <head>
        <title>COM519 - Drivers</title>
        <!-- Responsive Meta Tags -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
        <style>
            #create_new_driver{
                background-color: rgb(13, 110, 253);
                color: white;
                padding: 7px 10px 7px 10px;
                border-radius: 5px;
                position: relative;
                text-decoration: none;
            }
            #create_new_driver:hover{
                background-color: rgb(11, 94, 215);
            }
        </style>
    </head>
    <body>
        <%- include('common/header'); %>
        <div id="drivers_headings" style="text-align: center;">
            <h1 id="drivers_title">Driver List</h1>
            <div id="create_new" style="width: 100%; margin-top: 20px;">
                <a id="create_new_driver" href="create_driver">Create New Driver</a>
            </div>
            <form action="/" method="POST" style="margin-top: 30px;">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Driver Name</th>
                            <th>Driver Number</th>
                            <th>Driver Team</th>
                        </tr>
                    </thead>
                    <tbody>
                        <ul>
                            <%        
                                drivers.forEach(driver => {
                            %>
                                    <tr>
                                        <td><%=  driver._id  %></td>
                                        <td><%=  driver.name  %></td>
                                        <td><%=  driver.number %></td>
                                        <td><%=  driver.team  %></td>
                                        <td class="text-center">
                                            <a class='btn btn-info btn-xs' href="/drivers/update/<%= driver.id %>" >
                                                <span class="glyphicon glyphicon-edit"></span>
                                                Edit
                                            </a> 
                                            <a  href="/drivers/delete/<%= driver.id %>" class="btn btn-danger btn-xs">
                                                <span class="glyphicon glyphicon-remove"></span> 
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                            <%
                                });
                            %>
                        </ul>
                    </tbody>
                </table>
            </form>
        </div>
        <!--Bootstrap Bundle-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>
    </body>
</html>